<%= render 'home/menu' %>

<table border="1">
  <tr>
    <td>发言人</td>
    <td>时间</td>
    <td>QQ</td>
    <td></td>
  </tr>
  <% @lines.each do |line| %>
  <tr>
    <td><a href="/home/user_chat?user_id=<%= line.user.id %>"><%= line.user.name_list %></a></td>
    <td><%= line.time %></td>
    <td><%= line.user.qq_num %></td>
    <td>
      <%= simple_format line.text.gsub('\n', '<br />') %>
    </td>
  </tr>
  <% end %>
</table>

