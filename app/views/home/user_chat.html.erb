<%= render 'home/menu' %>

<table border="1">
  <% @lines.each do |line| %>
  <tr>
    <td>
      <p>
        <b>发言: </b><%= line.user.name_list %>
        <span style="margin-left: 15px;"><%= line.time %></span>
      </p>
      <%= simple_format line.text.gsub('\n', '<br />') %>

      <p><a href="/home/<%= line.chat_record.id %>"><b>所属 chat_records</b></a></p>
    </td>
  </tr>
  <% end %>
</table>


<%= paginate @lines %>